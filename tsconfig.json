{
  "compilerOptions": {
    "module": "NodeNext", // Set to 'NodeNext' to match 'moduleResolution'
    "target": "es2017", // or higher
    "outDir": "build",  // Output directory for compiled files
    "rootDir": "src",
    "moduleResolution": "NodeNext",    
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ]
}