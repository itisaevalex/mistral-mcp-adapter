{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2017",
    "outDir": "build",
    "rootDir": "src",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ]
}